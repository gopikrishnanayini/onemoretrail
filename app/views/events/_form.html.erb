<%= form_for ([@student, @event]) do |f| %>
  <% if @event.errors.any? %>
  <div id='error explanation' >
   <h2><%= pluralize(@event.errors.count,'error')%>Prohibited event from being saved: %></h2>
  <ul>
  <% @event.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
  </div>
  <% end %>
<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :organiser %>
<%= f.text_field :organiser %>
</p>
<p>
<%= f.submit :save_event %>
</p>
<% end %>
